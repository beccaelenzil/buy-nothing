<%= bootstrap_form_for @group, class: 'create-group' do |f| %>
  <div class="form container">

    <p>Please provide the following information to <%= verb_name %> a new group:</p>

    <%= f.text_field :name %>
    <%= f.text_field :description %>
    <%= f.text_field :bounds %>
    <%= f.text_field :map%>
    <%= f.text_field :city %>
    <%= f.text_field :state %>
    <%= f.text_field :country %>
    <%= f.submit "#{action_name} Group", class: "group-button" %>
  </div>
<% end %>